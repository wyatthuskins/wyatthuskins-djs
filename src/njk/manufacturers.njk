{% extends '_layouts/base.njk' %}

{% block page_title %}Manufacturers{% endblock %}

{% block page_description %}Desoto Janitorial Supply Manufacturers{% endblock %}

{% block content %}

<div class="container">
  <h1 class="text-center mb-3">Manufacturers</h1>
  <div class="row">
  {% for manufacturer in manufacturers.manufacturers %}
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center">
      <div class="card-deck">
        <div class="card mb-3">
          <img src="..." class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{ manufacturer.name }}</h5>
            <p class="card-text"><a class="btn btn-danger" href="{{ manufacturer.site }}" target="_blank" role="button">Learn More</a></p>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
</div>
{% endblock %}